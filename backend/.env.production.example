APP_NAME="Kenkinian Mart"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://api.kenkinian-mart.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

# ─── LOGGING ───────────────────────────────
LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=warning

# ─── DATABASE ──────────────────────────────
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=kenkinian_mart_prod
DB_USERNAME=kenkinian_user
DB_PASSWORD=secure_password_here

# ─── DRIVERS ───────────────────────────────
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database
CACHE_STORE=file
SESSION_DRIVER=file
SESSION_LIFETIME=120

# ─── REDIS (Optional) ──────────────────────
# MEMCACHED_HOST=127.0.0.1
# REDIS_CLIENT=phpredis
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379

# ─── MAIL ──────────────────────────────────
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailgun.org
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="no-reply@kenkinian-mart.com"
MAIL_FROM_NAME="${APP_NAME}"

# ─── AWS ───────────────────────────────────
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ─── PAYMENT (MIDTRANS) ────────────────────
MIDTRANS_SERVER_KEY=
MIDTRANS_CLIENT_KEY=
MIDTRANS_IS_PRODUCTION=true
MIDTRANS_IS_SANITIZED=true
MIDTRANS_IS_3DS=true

# ─── JWT AUTH ──────────────────────────────
JWT_SECRET=
JWT_ALGO=HS256

# ─── FRONTEND ──────────────────────────────
FRONTEND_URL=https://kenkinian-mart.com
